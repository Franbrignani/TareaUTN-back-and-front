<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar libro</h4>
            <form action="/admin/inventario/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{libro.id}}" name="id">
                <div class="form-group">
                    <label for="">Titulo</label>
                    <input type="text" class="form-control" name="titulo" value="{{libro.titulo}}">
                </div>
                <div class="form-group">
                    <label for="">Genero</label>
                    <input type="text" class="form-control" name="genero" value="{{libro.genero}}">
                </div>
                <div class="form-group">
                    <label for="">Autor</label>
                    <input type="text" class="form-control" name="autor" value="{{libro.autor}}">
                </div>

                <div class="mb-3 row">

                    <p>
                        <label>Imagen: <input type="file" class="form-control" name="imagen" id="imagen"></label>
                    </p>
                    <p>
                        <labe><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen actual?</labe>
                        <input type="hidden" name="img_original" value="{{inventario.img_id}}">
                    </p>
                </div>

                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>

            {{#if error}}
                <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>